PORT=3000
CORS_ORIGIN=http://localhost:5173

JWT_SECRET=change-me
JWT_EXPIRES_IN=7d

DATABASE_URL=postgresql://user:password@ep-xxx.region.neon.tech/dbname?sslmode=require
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL_ENABLED=true
DB_SSL_REJECT_UNAUTHORIZED=true

# Crypto payments (static/manual, NowPayments checkout, or Cryptomus checkout)
CRYPTO_GATEWAY=static # static | nowpayments | cryptomus
CRYPTO_DEPOSIT_ADDRESS=demo-crypto-wallet-address
CRYPTO_NETWORK=USDT-TRC20
CRYPTO_DEFAULT_CURRENCY=USDT
CRYPTO_PAY_CURRENCY=usdttrc20
CRYPTO_MIN_AMOUNT=10
CRYPTO_PROVIDER=manual-crypto
CRYPTO_MEMO_PREFIX=CASINO
CRYPTO_WEBHOOK_SECRET=change-me
CRYPTO_DEV_MODE=false
CRYPTO_WEBHOOK_PUBLIC_URL=https://your-domain.com/api/payments/crypto/webhook

# NowPayments (used when CRYPTO_GATEWAY=nowpayments)
NOWPAYMENTS_API_KEY=your-api-key
NOWPAYMENTS_IPN_SECRET=your-ipn-secret

# Cryptomus (used when CRYPTO_GATEWAY=cryptomus)
CRYPTOMUS_API_KEY=your-api-key
CRYPTOMUS_MERCHANT_ID=your-merchant-id
CRYPTOMUS_BASE_URL=https://api.cryptomus.com/v1
CRYPTO_RETURN_URL=https://your-domain.com/return
CRYPTO_SUCCESS_URL=https://your-domain.com/success
